package Day1_ClassesAndObjects;
import java.util.Scanner;

class MobilePhoneDetails {
    // Attributes
    String brand;
    String model;
    double price;

    // Constructor
    MobilePhoneDetails(String brand, String model, double price) {
        this.brand = brand;
        this.model = model;
        this.price = price;
    }

    // Method to display mobile phone details
    void displayDetails() {
        System.out.println("\n--- Mobile Phone Details ---");
        System.out.println("Brand : " + brand);
        System.out.println("Model : " + model);
        System.out.println("Price : â‚¹" + price);
    }
}

public class PhoneInfo {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Input from user
        System.out.print("Enter Brand: ");
        String brand = sc.nextLine();

        System.out.print("Enter Model: ");
        String model = sc.nextLine();

        System.out.print("Enter Price: ");
        double price = sc.nextDouble();

        // Create MobilePhone object
        PhoneInfo phone = new PhoneInfo(brand, model, price);

        // Display details
        phone.displayDetails();

        sc.close();
    }
}
