package Day2_Constructors;
public class VehicleApp {

    // ðŸ›º Vehicle Class
    static class Vehicle {
        // Instance Variables
        String ownerName;
        String vehicleType;

        // Class Variable
        static double registrationFee = 5000.0;  // default fee

        // Constructor
        public Vehicle(String ownerName, String vehicleType) {
            this.ownerName = ownerName;
            this.vehicleType = vehicleType;
        }

        // Instance Method
        public void displayVehicleDetails() {
            System.out.println("\n--- Vehicle Details ---");
            System.out.println("Owner Name     : " + ownerName);
            System.out.println("Vehicle Type   : " + vehicleType);
            System.out.println("Registration Fee: â‚¹" + registrationFee);
        }

        // Class Method
        public static void updateRegistrationFee(double newFee) {
            registrationFee = newFee;
            System.out.println("âœ… Registration Fee Updated to: â‚¹" + registrationFee);
        }
    }

    // ðŸ”¸ Main Method
    public static void main(String[] args) {
        // Creating Vehicle Objects
        Vehicle v1 = new Vehicle("Vaibhavi", "Scooter");
        Vehicle v2 = new Vehicle("Aryan", "Car");

        // Displaying Details
        v1.displayVehicleDetails();
        v2.displayVehicleDetails();

        // Updating Registration Fee
        Vehicle.updateRegistrationFee(6000.0);

        // Display again after update
        v1.displayVehicleDetails();
        v2.displayVehicleDetails();
    }
}
