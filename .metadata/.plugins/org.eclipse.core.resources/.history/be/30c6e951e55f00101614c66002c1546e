package Day2_Constructors;

public class ProductApp {

    // âœ… Inner class for Product
    static class ProductInventory {
        String productName;
        double price;
        static int totalProducts = 0;

        public ProductInventory(String productName, double price) {
            this.productName = productName;
            this.price = price;
            totalProducts++;
        }

        public void displayProductDetails() {
            System.out.println("\n--- Product Details ---");
            System.out.println("Product Name: " + productName);
            System.out.println("Price       : â‚¹" + price);
        }

        public static void displayTotalProducts() {
            System.out.println("\nðŸ“¦ Total Products Created: " + totalProducts);
        }
    }

    // âœ… Main Method
    public static void main(String[] args) {
        ProductInventory p1 = new ProductInventory("Laptop", 75000);
        ProductInventory p2 = new ProductInventory("Smartphone", 29999);
        ProductInventory p3 = new ProductInventory("Headphones", 1999);

        p1.displayProductDetails();
        p2.displayProductDetails();
        p3.displayProductDetails();

        ProductInventory.displayTotalProducts();
    }
}
